{
  "name": "hexagon-server",
  "version": "0.1.0",
  "main": "build/index.js",
  "author": "Jakub Sapalski",
  "license": "ISC",
  "private": true,
  "scripts": {
    "clean": "rimraf ./build",
    "prebuild": "npm run clean",
    "build": "tsc",
    "start": "node --inspect=localhost:5858 --nolazy -r ts-node/register src/index.ts",
    "dev": "nodemon --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "style": "prettier --list-different src/**/*.ts test/**/*.ts",
    "lint": "tslint src/**/*.ts"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^23.3.14",
    "@types/request": "^2.48.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "express": "^4.16.4",
    "request": "^2.88.0",
    "socket.io": "^2.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run style",
      "pre-push": "npm run lint"
    }
  }
}
